<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net9.0-android;net9.0-ios;net9.0-maccatalyst</TargetFrameworks>

		<!-- Android 최소 지원 버전을 21(Lollipop)로 설정 -->
		<AndroidMinSdkVersion>21</AndroidMinSdkVersion>
		
		<AndroidKeyStore>true</AndroidKeyStore>

		<!-- 플랫폼 분석기에 최소 플랫폼 버전을 알려 줘서 경고 제거 -->
		<SupportedOSPlatformVersion>21.0</SupportedOSPlatformVersion>

		<OutputType>Exe</OutputType>
		<RootNamespace>DispCtrl</RootNamespace>
		<UseMaui>true</UseMaui>
		<SingleProject>true</SingleProject>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<!-- Display name -->
		<ApplicationTitle>DispCtrl</ApplicationTitle>

		<!-- Versions -->
		<ApplicationDisplayVersion>1.1</ApplicationDisplayVersion>
		<ApplicationVersion>1</ApplicationVersion>

		<!-- To develop, package, and publish an app to the Microsoft Store, see: https://aka.ms/MauiTemplateUnpackaged -->
		<WindowsPackageType>None</WindowsPackageType>

		<!-- AOT(사전 컴파일) 끄기 -->
		<RunAotCompilation>false</RunAotCompilation>
		<!-- IL 트리밍 끄기 -->
		<PublishTrimmed>false</PublishTrimmed>

		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'ios'">15.0</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'maccatalyst'">15.0</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'android'">21.0</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">10.0.17763.0</SupportedOSPlatformVersion>
		<TargetPlatformMinVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'windows'">10.0.17763.0</TargetPlatformMinVersion>
		<SupportedOSPlatformVersion Condition="$([MSBuild]::GetTargetPlatformIdentifier('$(TargetFramework)')) == 'tizen'">6.5</SupportedOSPlatformVersion>
		<AndroidSigningKeyStore>dispctrl.keystore</AndroidSigningKeyStore>
	</PropertyGroup>

	<PropertyGroup>
		<!-- 릴리스 서명용 Keystore 활성화 -->
		<AndroidKeyStore>true</AndroidKeyStore>

		<!-- keystore 파일 경로 (프로젝트 폴더에 dispctrl.keystore를 두세요) -->
		<AndroidSigningKeyStore>$(MSBuildThisFileDirectory)dispctrl.keystore</AndroidSigningKeyStore>

		<!-- keytool 생성 시 지정한 alias -->
		<AndroidSigningKeyAlias>dispctrl_key</AndroidSigningKeyAlias>

		<!-- keystore 비밀번호 -->
		<AndroidSigningStorePass>scauto5678!</AndroidSigningStorePass>

		<!-- alias(키) 비밀번호 (동일하게 설정하셨다면 keystore 비밀번호와 같게) -->
		<AndroidSigningKeyPass>scauto5678!</AndroidSigningKeyPass>
	</PropertyGroup>

	<PropertyGroup Condition="$([MSBuild]::IsOSPlatform('windows'))">
		<TargetFrameworks>$(TargetFrameworks);net9.0-windows10.0.19041.0</TargetFrameworks>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|net9.0-android|AnyCPU'">
	  <EmbedAssembliesIntoApk>True</EmbedAssembliesIntoApk>
	  <AndroidUseAapt2>True</AndroidUseAapt2>
	  <AndroidKeyStore>True</AndroidKeyStore>
	  <AndroidSigningStorePass>scauto5678!</AndroidSigningStorePass>
	  <AndroidSigningKeyAlias>dispctrl_key</AndroidSigningKeyAlias>
	  <AndroidSigningKeyPass>scauto5678!</AndroidSigningKeyPass>
	  <ApplicationVersion>２</ApplicationVersion>
	  <ApplicationDisplayVersion>1.2</ApplicationDisplayVersion>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|net9.0-android|AnyCPU'">
	  <AndroidUseAapt2>False</AndroidUseAapt2>
	  <AndroidKeyStore>True</AndroidKeyStore>
	  <AndroidSigningStorePass>scauto5678!</AndroidSigningStorePass>
	  <AndroidSigningKeyAlias>dispctrl_key</AndroidSigningKeyAlias>
	  <AndroidSigningKeyPass>scauto5678!</AndroidSigningKeyPass>
	  <ApplicationVersion>２</ApplicationVersion>
	  <ApplicationDisplayVersion>1.2</ApplicationDisplayVersion>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|net9.0-ios|AnyCPU'">
	  <ApplicationVersion>２</ApplicationVersion>
	  <ApplicationDisplayVersion>1.2</ApplicationDisplayVersion>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|net9.0-maccatalyst|AnyCPU'">
	  <ApplicationVersion>２</ApplicationVersion>
	  <ApplicationDisplayVersion>1.2</ApplicationDisplayVersion>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|net9.0-windows10.0.19041.0|AnyCPU'">
	  <ApplicationVersion>２</ApplicationVersion>
	  <ApplicationDisplayVersion>1.2</ApplicationDisplayVersion>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|net9.0-ios|AnyCPU'">
	  <ApplicationVersion>２</ApplicationVersion>
	  <ApplicationDisplayVersion>1.2</ApplicationDisplayVersion>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|net9.0-maccatalyst|AnyCPU'">
	  <ApplicationVersion>２</ApplicationVersion>
	  <ApplicationDisplayVersion>1.2</ApplicationDisplayVersion>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|net9.0-windows10.0.19041.0|AnyCPU'">
	  <ApplicationVersion>２</ApplicationVersion>
	  <ApplicationDisplayVersion>1.2</ApplicationDisplayVersion>
	</PropertyGroup>

	<ItemGroup>
		
		<MauiIcon Include="Resources/Images/AppIcon/appicon.png">
			<!-- 배경을 투명하게 두려면 아래 줄을 추가 -->
			<BackgroundColor>Transparent</BackgroundColor>
		</MauiIcon>
		
		<!-- Splash Screen 
		<MauiSplashScreen
		  Include="Resources\Splash\splash.svg"
		  Color="#512BD4"
		  BaseSize="128,128" /> -->

		<!-- Images (PNG/JPG 만 포함하고 SVG는 제외) -->
		<MauiImage Include="Resources\Images\*" Exclude="Resources\Images\*.svg" />

		<!-- dotnet_bot.png 는 사이즈 커스터마이징 -->
		<MauiImage Update="Resources\Images\dotnet_bot.png" Resize="True" BaseSize="300,185" />

		<!-- Custom Fonts -->
		<MauiFont Include="Resources\Fonts\*" />

		<!-- Raw Assets -->
		<MauiAsset Include="Resources\Raw\**" LogicalName="%(RecursiveDir)%(Filename)%(Extension)" />
		
	</ItemGroup>

	<ItemGroup>
	  <AndroidResource Remove="Platforms\Android\Resources\values\themes.xml" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Maui.Controls" Version="$(MauiVersion)" />
		<PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="9.0.0" />
	</ItemGroup>
	
</Project>