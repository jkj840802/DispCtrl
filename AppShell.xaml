<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DispCtrl.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DispCtrl"
    Title="DispCtrl"
    Shell.BackgroundColor="{AppThemeBinding Light={Color Black}, Dark={Color White}}"
    TitleColor="{AppThemeBinding Light={Color #696969}, Dark={Color White}}"
    Shell.ForegroundColor="{AppThemeBinding Light={Color Black}, Dark={Color White}}">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
